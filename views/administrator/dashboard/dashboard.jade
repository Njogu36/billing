      // =============== Left side End ================
      .main-content-wrap.sidenav-open.d-flex.flex-column
        // ============ Body content start =============
        .row 
         .col-md-12 
          != messages('message', locals)
        .row 
         .col-md-12
          .card 
           .card-header
            .card-title 
              h4 Registered Companies
           
               button.btn.btn-primary(type='button' data-toggle='modal' data-target='#add_new_company' style='float:right') Add new company
           .card-body
            .table-responsive
                table#deafult_ordering_table.display.table.table-striped.table-bordered(style='width:100%')
                  thead
                    tr
                      th
                      th Vendor Id
                      th Company Name
                      th User Name
                      th Email
                      th DB Name
                      th Status
                      th Actions
                  tbody
                    each x in companies 
                      tr   
                        td(style='text-align:center')
                          img(src=x.company_icon, style='width:50px;width:50px', alt="")
                        td=x.vendor_id
                        td=x.company_name 
                        td #{x.first_name} #{x.last_name} 
                        td #{x.username} 
                        td #{x.db_name}
                        td 
                          if x.enabled === true 
                           span.badge.badge-success True 
                          if x.enabled === false 
                           span.badge.badge-danger False 
                        td 
                          a(href="#") 
                          i.text-20.i-Eye
      // =============== Modals ========================
