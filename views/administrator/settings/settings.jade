              .triangle
            
            
            
        
          
          
          
        
      // =============== Left side End ================
      .main-content-wrap.sidenav-open.d-flex.flex-column
        // ============ Body content start =============
        .row 
         .col-md-12 
          != messages('message', locals)
        .row 
         .col-md-12
          .card 
           .card-header
            .card-title 
              h4 Settings
           .card-body 
             ul#myTab.nav.nav-tabs(role='tablist')
                li.nav-item
                    a#currency-tab.nav-link.active.show(data-toggle='tab' href='#currency' role='tab' aria-controls='homeBasic' aria-selected='true') Currencies
               #myTabContent.tab-content
                #currency.tab-pane.fade.active.show(role='tabpanel' aria-labelledby='currency-basic-tab')
                 .row 
                  .col-md-12 
                   button.btn.btn-primary(style='float:right' data-toggle='modal' data-target='#add_new_currency') Add new currency
                 .row  
                  .col-md-12 
                    table#deafult_ordering_table.display.table.table-striped.table-bordered(style='width:100%')
                        thead
                          tr
                            th Name
                            th Actions
                        tbody 
                         each x in currencies
                          tr 
                           td=x.name 
                           td 
                            a(href="/administrator/delete_currency/#{x._id}")
                              i.i-Close-Window(style='color:red') 
                            
            
