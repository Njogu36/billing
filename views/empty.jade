doctype html
html(lang='en' dir='')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    title Dashboard
    link(rel='shortcut icon' href='/auth/assets/img/stisla-fill.svg' type='image/x-icon')
    link(href='https://fonts.googleapis.com/css?family=Nunito:300,400,400i,600,700,800,900' rel='stylesheet')
    link(href='/accounts/dist-assets/css/themes/lite-blue.min.css' rel='stylesheet')
    link(href='/accounts/dist-assets/css/plugins/perfect-scrollbar.min.css' rel='stylesheet')
    link(rel="stylesheet", href="/accounts/dist-assets/css/plugins/datatables.min.css" )
  body.text-left
    .app-admin-wrap.layout-sidebar-large
      .main-header
        .logo
         if user.type === 'Administrator'
          img(src=user.company_icon style='width:100px' alt='')
         if user.type ==='Company'
          img(src=user.company_icon style='width:80px' alt='')
       
        .menu-toggle
          div
          div
          div
        .d-flex.align-items-center
          
         
        div(style='margin: auto')
        .header-part-right
          // Full screen toggle
          i.i-Full-Screen.header-icon.d-none.d-sm-inline-block(data-fullscreen='')
          
          
          .dropdown
            .user.col.align-self-end
              
              img#userDropdown(src='/assets/images/avatar.png' alt='' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
              .dropdown-menu.dropdown-menu-right(aria-labelledby='userDropdown')
                .dropdown-header
                  i.i-Lock-User.mr-1
                  | #{user.first_name} #{user.last_name}
                
                a.dropdown-item(href='/logout') Sign out
      .side-content-wrap
        

        .sidebar-left.open.rtl-ps-none(data-perfect-scrollbar='' data-suppress-scroll-x='true')
          ul.navigation-left
            
            if user.role ==='Administrator' || user.role ==='Finance'
             li.nav-item
              a.nav-item-hold(href='#')
                i.nav-icon.i-Financial
                span.nav-text Transactions  
              .triangle
            if user.role ==='Administrator'
             li.nav-item(data-item='customers')
              a.nav-item-hold(href='#')
                i.nav-icon.i-Business-Mens
                span.nav-text Customers
              .triangle
            if user.role ==='Administrator'
             li.nav-item(data-item='catalog')
              a.nav-item-hold(href='#')
                i.nav-icon.i-Belt-3
                span.nav-text Catalog
              .triangle
            if user.role ==='Administrator' || user.role ==='Technical'
             li.nav-item(data-item='checkout')
              a.nav-item-hold(href='#')
                i.nav-icon.i-Checkout
                span.nav-text Checkout
              .triangle
            if user.role ==='Administrator' || user.role ==='Finance'
             li.nav-item
              a.nav-item-hold(href='#')
                i.nav-icon.i-Statistic
                span.nav-text Reports
              .triangle
            if user.role ==='Administrator'
             li.nav-item(data-item='business_accounts')
              a.nav-item-hold(href='#')
                i.nav-icon.i-Dashboard
                span.nav-text Business Accounts
              .triangle
            if user.role ==='Administrator' || user.role ==='Technical'
             li.nav-item(data-item='developer_tools')
               a.nav-item-hold(href='#')
                i.nav-icon.i-Geek
                span.nav-text Developer Tools
               .triangle
            
        .sidebar-left-secondary.rtl-ps-none(data-perfect-scrollbar='' data-suppress-scroll-x='true')
            // Customers
            ul.childNav(data-parent='customers')
              li.nav-item
                a(href='#')
                  i.nav-icon.i-Clock-3
                  span.item-name Subscribers
              li.nav-item
                a(href='#')
                  i.nav-icon.i-Clock-4
                  span.item-name Audience
            // Catalog
            ul.childNav(data-parent='catalog')
              li.nav-item
                a(href='/company/products')
                  i.nav-icon.i-Plaxo
                  span.item-name Products
              li.nav-item
                a(href='/company/subscription_plans')
                  i.nav-icon.i-Road-2
                  span.item-name Subscription Plans
              
              li.nav-item
                a(href='/company/coupons')
                  i.nav-icon.i-Tag-4
                  span.item-name Coupons 
              
            // Checkout
            ul.childNav(data-parent='checkout')
              li.nav-item
                a(href='#')
                  i.nav-icon.i-Clock-3
                  span.item-name Checkout Settings
              li.nav-item
                a(href='#')
                  i.nav-icon.i-Clock-4
                  span.item-name Sales Tax Settings
            // Business Accounts
            ul.childNav(data-parent='business_accounts')
              li.nav-item
                a(href='/company/account_setting')
                  i.nav-icon.i-Data-Settings
                  span.item-name Account Setting
              li.nav-item
                a(href='#')
                  i.nav-icon.i-Circular-Point
                  span.item-name Balance Currency 
              li.nav-item
                a(href='/company/team_members')
                  i.nav-icon.i-Conference
                  span.item-name Team Members
            // Developer Tools
            ul.childNav(data-parent='developer_tools')
              li.nav-item
                a(href='#')
                  i.nav-icon.i-Clock-3
                  span.item-name Alert & Webhooks
              li.nav-item
                a(href='#')
                  i.nav-icon.i-Clock-4
                  span.item-name Authentication
        .sidebar-overlay        
            
        
          
          
          
        
      // =============== Left side End ================
      .main-content-wrap.sidenav-open.d-flex.flex-column
        // ============ Body content start =============
        .row 
         .col-md-12 
            .card 
                .card-header 
                      .card-title
                        h4 Team Members
                .card-body 

        
  .modal.fade#payNow(tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
        .modal-dialog.modal-lg
          .modal-content
            .modal-header
              h5#exampleModalCenterTitle.modal-title Order Summary & Checkout
              button.close(type='button' data-dismiss='modal' aria-label='Close')
                span(aria-hidden='true') Ã—
            .modal-body 
             #exceed 
              div(style='text-align:center')
               img(src="https://i.pinimg.com/originals/5d/7e/39/5d7e39c0398db798ae95728dc0a2d12c.png",style='width:100px;margin-bottom:20px', alt="") 
               
               p  Please Upgrade Your Plan.
             #notexceed
              #failed
                p FAILED
              #success 
               p SUCCESS
              #order  
               .row  
                .col-md-12 
                  .card 
                    .card-header 
                      .card-title 
                       h4 Order Summary 
                    .card-body
                      table.table 
                        thead  
                          tr 
                      
                            th Quantity 
                            th Unit
                            th Currency
                            th Price
                            th Total
                        tbody 
                           tr 
                         
                            td
                              | #{quantity}
                              input.form-control#quantity(type='hidden',style='width:100px' value=quantity) 
                            td#priceUnit
                            td
                              select.form-control#currency(name="" style='width:100px') 
                                #option
                            td#price
                            td#total
               .row(style='margin-top:20px')
                  .col-md-12
                   .card 
                    .card-header 
                      .card-title 
                       h4 Coupon ( Optional )
                    .card-body 
                      .form-group 
                       
                       label(for="Coupon") Coupon Code 
                       input.form-control#coupon_code(type="text" name='coupon')
                       div(style='margin-top:4px')
                        span#success_message(style='color:green')
                        span#error_message(style='color:red')
               form#FORM
                .row
                 .col-md-12
                      input#quantity_(type="hidden" name='quantity' value=quantity )
                      input#price_(type="hidden" name="price")
                      input#currency_(type="hidden" name="currency")
                      input#total_(type='hidden' value=total name='total')
                      input#userID(type='hidden' value=userID)
                      input#vendorID(type="hidden" value=vendorID)
                      input#productID(type="hidden" value=productID)
                      input#coupons(type='hidden' value=coupons)
                      
                   
                
                       
                      
                .row(style='margin-top:20px')
                 .col-md-12
                  .card 
                    .card-header 
                      .card-title 
                       h4 Billing Details
                    .card-body
                    
                      .form-group
                        .row 
                         .col-md-4
                           label(for="") First name 
                           input.form-control#first_name(type="text" required)
                         .col-md-4
                           label(for="") Middle name 
                           input.form-control#middle_name(type="text" )
                         .col-md-4
                           label(for="") Last name 
                           input.form-control#last_name(type="text"  required)
                        
                      
                
                     
                .row(style='margin-top:20px')
                 .col-md-12
                  .card 
                    .card-header 
                      .card-title 
                       h4 Payment Options
                    .card-body
                      .row 
                       .col-md-12 
                         .form-group 
                          label.radio.radio-outline-success
                            input(type='radio' name='radio' value="MPESA" class='payment_option' checked)
                            &nbsp;
                            span MPESA
                            span.checkmark
                          &nbsp;
                          label.radio.radio-outline-success
                            input(type='radio' name='radio' value="AIRTEL MONEY"  class='payment_option')
                            &nbsp;
                            span AIRTEL MONEY
                            span.checkmark
                          &nbsp;
                          label.radio.radio-outline-success
                            input(type='radio' name='radio' value="VISA/MASTERCARD"  class='payment_option')
                            &nbsp;
                            span VISA / MASTERCARD
                            span.checkmark
                      .row 
                        .col-md-12#MPESA 
                          .form-group 
                            label(for="") MPESA Mobile Number 
                            input.form-control#mpesa_number(type="tel" name='mpesa_number') 
                        .col-md-12#AIRTEL 
                          .form-group 
                            label(for="") AIRTEL Mobile Number 
                            input.form-control#airtel_number(type="tel" name='airtel_number') 
                        .col-md-12#VISA
                         .form-group
                          input.form-control#credit_number(name="credit-number" class="cc-number" type="tel" pattern="\d*" maxlength="19" placeholder="Card Number")
                         .form-group
                          input.form-control#credit_expires(name="credit-expires" class="cc-expires" type="tel" pattern="\d*" maxlength="7" placeholder="MM / YY")
                         .form-group
                          input.form-control#credit_cvc(name="credit-cvc" class="cc-cvc" type="tel" pattern="\d*" maxlength="4" placeholder="CVC")

                      
                .row(style='margin-top:20px')
                 .col-md-12 
                   button.btn.btn-primary.btn-block#main_button PAY NOW                
