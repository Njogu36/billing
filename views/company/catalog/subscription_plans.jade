      // =============== Left side End ================
      .main-content-wrap.sidenav-open.d-flex.flex-column
        // ============ Body content start =============
        .row 
         .col-md-12
          != messages('message', locals)
        .row 
         .col-md-12 
            .card 
                .card-header 
                      .card-title
                        h4 Subscription Plans
                         button.btn.btn-primary(style='float:right' data-toggle='modal' data-target='#add_subscription') Add subscription plan
                .card-body 
                  table.table#pdfmake
                      thead
                        tr
                          th
                          th Name
                          th Custom Message
                          th Billing Interval
                          th Every / Period
                          th Trial Period 
                          th Quantity
                          th Currency ( Default )
                          th Prices
                          th Actions
                      tbody
                       each x in subscriptions 
                        tr 
                          td  
                           img(src=x.icon,style='width:20px', alt="")
                          td=x.plan_name
                          td
                           if x.checkout_message !==''
                            | #{x.checkout_message}
                           if x.checkout_message ===''
                            | ....
                          td=x.billing_interval 
                          td 
                           if x.every > 0 
                            | #{x.every} / #{x.period} 
                           if x.every === 0
                             | .... 
                          td
                           if x.trial_period !==""
                            | #{x.trial_period} 
                           if x.trial_period === ""
                            | ....
                          td #{x.quantity}
                          td #{currency.name}
                          td 
                            each y in x.currencies 
                             if y.currency ===  currency.name
                               span.badge.badge-dark #{y.currency} #{y.amount}
                             if y.currency !==  currency.name
                               span.badge.badge-success #{y.currency} #{y.amount}
                             br
                          td 
                           a(href="/company/delete_subscription_plan/#{x._id}")
                              i.i-Close-Window(style='color:red') 

                 

        
  // ADD SUBSCRIPTION
  .modal.fade#add_subscription(tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
        .modal-dialog.modal-lg
          .modal-content
            .modal-header
              h5#exampleModalCenterTitle.modal-title Add subscription plan
              button.close(type='button' data-dismiss='modal' aria-label='Close')
                span(aria-hidden='true') Ã—
            .modal-body
              form.form(action="/company/add_subscription_plan",method='POST', enctype="multipart/form-data")
                 .row 
                  .col-md-4
                   .form-group  
                    label(for="plan_name") Plan Name 
                    input.form-control(type="text" name='plan_name' required) 
                  .col-md-4
                   .form-group  
                    label(for="checkout_message") Checkout Message ( Optional )
                    textarea.form-control(name="checkout_message", cols="30", rows="5", )
                  .col-md-4 
                   .form-group 
                    label(for="set_icon") Set Icon
                    br
                    img(src="/assets/images/icon.png", alt="", style='width:50px' ) 
                    br
                    br
                    input.form-control(type="file" name='file' accept='.jpg, .jpeg, .png')
                 
                 hr 
                 .row 
                  .col-md-12 
                   h4 Subscription Plan Pricing
                 .row 
                  .col-md-12 
                   .form-group 
                    label(for="") Price ( Currency: USD )
                    input.form-control#default_currency(type='hidden' value=currency.name name='default_currency')
                    input.form-control#price(type="number", name='price' required,min=1) 
                   .form-group
                    each x in currencies
                     if x.name === currency.name 
                      .row 
                       .col-md-3
                        label.checkbox.checkbox-dark
                            input(type='checkbox' name="currency" required  checked value=x.name  )
                            span #{x.name} ( Default )
                            span.checkmark
                       
                       .col-md-3(style='float:left')
                        input.form-control(type="text" value=x.name name='price_currency' readonly )
                     if x.name !== currency.name
                      .row
                       .col-md-3
                        label.checkbox.checkbox-dark
                            input(type='checkbox' name="currency"  value=x.name )
                            span #{x.name}
                            span.checkmark
                       
                       .col-md-3(style='float:left')
                        input.form-control(type="text" value=x.name name='price_currency' readonly )
                 hr
                 .row 
                   .col-md-3
                    .form-group
                      label(for="billing_interval") Billing Interval 
                      select.form-control#billing_interval(name="billing_interval" required)
                        option(value="") Choose one option 
                        option(value="Daily") Daily 
                        option(value="Monthly") Monthly 
                        option(value="3 Months") 3 Months 
                        option(value="6 Months") 6 Months
                        option(value="Yearly") Yearly  
                        option(value="Custom") Custom
                   #custom 
                    .col-md-3 
                     .row 
                      .col-md-3(style='margin-right:5px')
                        .form-group
                          label(for="every") Every
                          input.form-control(type="number",name='every',style='width:58px' min=1) 
                      .col-md-1
                      .col-md-5
                        .form-group
                          label(for="period") Period
                          select.form-control(name='period',style='width:80px') 
                            option(value="Days") Days 
                            option(value="Weeks") Weeks 
                            option(value="Months") Months 
                            option(value="Years") Years   
                   .col-md-3
                     .form-group
                          label(for="trial_period") Trial Period ( Optional )
                          input.form-control(type="number",name='trial_period', min=1,placeholder="Days" )
                   .col-md-3
                        .form-group
                          label(for="type") Type 
                          select.form-control#type(name="type" required)
                           option(value='') Choose one option 
                           option(value='Limited') Limited 
                           option(value='Unlimited') Unlimited  
                 #limited 
                    .row
                     .col-md-3 
                        .form-group 
                          label(for='quantity') Enter Quantity
                          input.form-control(type="number" name='quantity' min=1)

                 hr
                 .row 
                  .col-md-12 
                   
                    button.btn.btn-primary(type='submit') Save
                  
                      
                  
                       
            .modal-footer
              button.btn.btn-secondary(type='button' data-dismiss='modal') Close                
